@model zapatillas1.zapatillas1.Models.Producto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

        

        <div class="row align-items-start">
            <div class="col-md-6">
                <img src="~/img/@Html.DisplayFor(model => model.Foto)" class="foto-details">
            </div>
            <div class="col-md-6">
                <div class="product-data">
                    <h2>@Html.DisplayFor(model => model.Descripcion)</h2>
                    <h3>Precio: $@Html.DisplayFor(model => model.Precio)</h3>
                </div>
                <div class="talles">
                    <span class="form-control-label">Talles</span>
                    <ul id="group_6">
                        <li class="input-container">
                            <input class="input-radio" type="radio" data-product-attribute="6"
                                   name="group[6]"
                                   value="202">
                            <span class="radio-label">7</span>
                        </li>
                        <li class="input-container">
                            <input class="input-radio" type="radio" data-product-attribute="6"
                                   name="group[6]"
                                   value="206" checked="checked">
                            <span class="radio-label">9</span>
                        </li>
                        <li class="input-container">
                            <input class="input-radio" type="radio" data-product-attribute="6"
                                   name="group[6]"
                                   value="207">
                            <span class="radio-label">9.5</span>
                        </li>
                        <li class="input-container">
                            <input class="input-radio" type="radio" data-product-attribute="6"
                                   name="group[6]"
                                   value="210">
                            <span class="radio-label">11</span>
                        </li>
                    </ul>
                </div>

            </div>
        </div>

      
    
    
   
