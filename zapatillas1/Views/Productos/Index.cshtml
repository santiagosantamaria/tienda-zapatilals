@model IEnumerable<zapatillas1.zapatillas1.Models.Producto>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Modelos</h1>


<div class="row">

    @foreach (var prod in ViewBag.productosPorCodigo)
    {

        <div class="col-sm-12 col-md-6 col-lg-4 single-product">
            <h4>@prod.Descripcion</h4>
            <img src="~/img/@prod.Foto" class="foto-index">
            <p>Precio: $ @prod.Precio</p>
            @* <a class="btn btn-success" asp-action="Details" asp-route-id="@prod.Id">Ver Producto</a> *@
            <a class="btn btn-success" asp-action="Details" asp-route-id="@prod.Cod_producto">Ver Producto</a>




        </div>
    }


    <hr />



</div>
