@{
}

@model IEnumerable<zapatillas1.zapatillas1.Models.Producto>


@{
    ViewData["Title"] = "Stock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Stock</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">

   

     @foreach (var item in Model)
        {
        <div class="col-lg-4 single-product">

        <h4>@Html.DisplayFor(modelItem => item.Descripcion)</h4>
        <img src="~/img/@Html.DisplayFor(modelItem => item.Foto)" class="foto-index">
        <p>Precio: $@Html.DisplayFor(modelItem => item.Precio)</p>

        <br />

        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>


        </div>

        } 

</div>