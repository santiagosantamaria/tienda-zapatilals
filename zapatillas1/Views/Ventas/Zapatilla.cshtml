@{
    ViewData["Title"] = "Historial Ventas";

}

<h1>Historial de Ventas de @ViewBag.Producto.Descripcion</h1>

<table class="table">
    <thead>
        <tr>
            <th>Cant</th>
            <th>Fecha</th>
            <th>Monto</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Ventas)
        {
            <tr>
                <td>
                    @item.CantVenta
                </td>
                <td>
                    @item.Fecha
                </td>
                <td>
                    @item.Id_Producto
                </td>
            </tr>
        }
    </tbody>
</table>
